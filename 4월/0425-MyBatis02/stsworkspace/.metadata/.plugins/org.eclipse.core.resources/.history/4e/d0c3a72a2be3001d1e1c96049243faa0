<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mvc.mapper.BoardMapper">	

	<select id="selectAll" resultType="Board"> 
		select * from board
	</select>
	
	<select id="selectOne" parameterType="string" resultType="Board">
		select * from board where num = #{num}
	</select>
	
	<update id="countUp" parameterType="string">
		update board set count = count +1 where num = #{num}
	</update>
	
	<insert id="insert" parameterType="Board">
		insert into board values(null, #{pass}, #{name}, sysdat(), #{title}, #{content}, 0)
	</insert>
	
	<delete id="delete" parameterType="string">
		delete from board where num = #{num}
	</delete>

	
	<insert id="test">
		insert into board values(100, 'a', 'a', sysdate(), 'a', 'a', 0)
	</insert>
	
</mapper>